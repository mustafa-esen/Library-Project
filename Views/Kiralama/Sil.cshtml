@model Kiralama

<form method="post">
    <input asp-for="Id" hidden/> <!--Primary keyimiz id olduğu için bunu yazmamıza gerek yok ama id den farklı bir isim vermiş olsaydık o değişkeni id yerine yazmamız gerekirdi-->
    <div class="border p-3 mt-5">
        <div class="pb-3">
            <h2 class="text-primary">Kiralama Kaydı Sil</h2>
            <hr />
        </div>

        <div class="mb-3">
            <label asp-for="OgrenciId" class="p-0"></label>
            <input asp-for="OgrenciId" disabled class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="KitapId" class="p-0"></label>
            <select asp-for="KitapId" asp-items="ViewBag.KitapList" disabled class="form-select"></select>
        </div>

        <button type="submit" class="btn btn-lg btn-primary" style="width:250px">Kiralama Kaydı Sil</button>

        <a asp-controller="Kitap" asp-action="Index" class="btn btn-lg btn-primary" style="width:250px">Kiralamalara Geri Dön</a>
    </div>
</form>


